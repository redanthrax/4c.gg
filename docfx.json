{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**",
          "images/README.md",
          "docs/**",
          "projects/individual/_template.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "styles/**",
          "public/**",
          "main.css"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "4c.gg",
      "_appTitle": "4c.gg - Personal Blog & Projects",
      "_appFooter": "Â© 2024 4c.gg",
      "_disableContribution": true,
      "_disableNextArticle": true,
      "_enableSearch": true,
      "_gitContribute": {
        "repo": "https://github.com/yourusername/4c.gg",
        "branch": "main"
      },
      "pdf": false
    }
  }
}